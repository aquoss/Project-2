<div class="container center">
<%= form_for @game, url: game_new_path do |f| %>
<div class="row">
  <div class="input-field col s6 offset-s3">
    <%= f.text_field :wager, placeholder: "Make a Wager" %>
  </div>
</div>
  <div class="row">
    <div class="input-field col s6 offset-s3">
      <%= select(@game, @game.id, [10, 20, 30]) %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s6 offset-s3">
      <%= f.submit "Send Invite!", class: "btn" %>
    </div>
  </div>
</div>
<% end %>

