<div class="container" id="profile">
    <div class="row">
        <div class="col s4">
          <div class="card small">
            <div class="card-image">
            <%= image_tag @user.profile_photo, class: "profile-photo" %>
          </div>
          <div class="card-content">
            <h5 class="center"><%= @user.username %> </h5>
            </div>
        </div>
      </div>
        <!-- BETS WON -->
        <ul class="collapsible bets-card col s8 white" data-collapsible="accordion">
            <li>
                <div class="collapsible-header">
                    <span class="badge"><%= games_won(@user.id).length %></span>
                    <p class="valign">Bets Won</p>
                </div>
                <div class="collapsible-body"><%= render "bets_won" %>
                </div>
            </li>
            <li>
                <div class="collapsible-header">
                    <span class="badge"><%= games_lost(@user.id).length %></span>
                    <p class="valign">Bets Lost</p>
                </div>
                <div class="collapsible-body">
                    <%= render "bets_lost" %>
                </div>
            </li>
        </ul>

    </div>

    <div class="row valign-wrapper request-container">
        <ul class="collapsible col s12 white" data-collapsible="accordion">
            <li>
                <div class="collapsible-header">
                    <span class="new badge">
                        <%= total_requests(@user.id) %>
                    </span>
                    <i class="material-icons">error_outline</i>
                    <p class="valign">findMe Requests</p>
                </div>
                <div class="collapsible-body"><%= render "requests" %>
                </div>
            </li>
            <li>
                <div class="collapsible-header">
                    <span class="badge"><%= total_pending(@user.id) %></span>
                    <i class="material-icons">live_help</i>
                    <p class="valign">Pending Responses</p>
                </div>
                <div class="collapsible-body">
                    <%= render "pending_responses" %>
                </div>
            </li>
        </ul>
    </div>

    <%= link_to "New Game", games_new_path, class: "btn btn-navy" %>
    <div id="game-accepted" class="modal">
        <%= render "game_accepted" %>
    </div>
</div>
