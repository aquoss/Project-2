<div class="container" id="profile">
    <div class="row">
        <div class="col s4">
            <%= image_tag @user.profile_photo, class: "profile-photo" %>
        </div>

        <!-- BETS WON -->
        <ul class="collapsible col s8" data-collapsible="accordion">
            <li>
                <div class="collapsible-header">
                    <p class="valign">Bets Won</p>
                </div>
                <div class="collapsible-body"><%= render "bets_won" %>
                </div>
            </li>
            <li>
                <div class="collapsible-header">
                    <span class="badge"><%= total_pending(@user.id) %></span>
                    <i class="material-icons">live_help</i>
                    <p class="valign">Bets Lost</p>
                </div>
                <div class="collapsible-body">
                    <%= render "bets_lost" %>
                </div>
            </li>
        </ul>

    </div>

    <div class="row valign-wrapper">
        <ul class="collapsible col s12" data-collapsible="accordion">
            <li>
                <div class="collapsible-header">
                    <span class="new badge">
                        <%= total_requests(@user.id) %>
                    </span>
                    <i class="material-icons">error_outline</i>
                    <p class="valign">findMe Requests</p>
                </div>
                <div class="collapsible-body"><%= render "requests" %>
                </div>
            </li>
            <li>
                <div class="collapsible-header">
                    <span class="badge"><%= total_pending(@user.id) %></span>
                    <i class="material-icons">live_help</i>
                    <p class="valign">Pending Responses</p>
                </div>
                <div class="collapsible-body">
                    <%= render "pending_responses" %>
                </div>
            </li>
        </ul>
    </div>

    <%= link_to "New Game", games_new_path, class: "btn" %>
    <div id="game-accepted" class="modal">
      <%= render "game_accepted" %>
    </div>
</div>
